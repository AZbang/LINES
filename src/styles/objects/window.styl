#window
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	z-index 999

#content
	position absolute
	background-color #fff
	transition all .5s
	opacity 1
	padding 10px 0
	top 50%
	margin-top -170px
	width 100%

#content h1
	font-size 50px
	text-align center

#content p
	font-size 30px
	color black
	text-align center
	font-weight bold
	padding 10px

#content button
	margin 30px auto 10px
	width 150px
	height 50px
	font-size 30px
	background-color #FF9800
	cursor pointer
	padding 5px